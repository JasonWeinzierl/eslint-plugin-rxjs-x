{
  "compilerOptions": {
    /* Imports */
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Globals */
    "lib": [
      "ESNext",
    ],

    /* Output */
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,

    /* Rules */
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
  },
  "include": [
    "src",
    "tests",
  ],
}
